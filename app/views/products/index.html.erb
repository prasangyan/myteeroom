<h1>Listing products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= truncate(strip_tags(product.description)) %></td>
    <td><%= product.price %></td>
	 	<td><%= image_tag(product.image_url) %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to "Add new tiny image", :controller => "tinies", :action => "new", :id => product.id %></td>
    <td><%= link_to "List tiny images", :controller => "tinies", :action => "index", :id => product.id %></td>
  </tr>
<% end %>
</table>

